Exercice 3

	!# /bin/sh
	echo "Nom du répertoire destinataire :"
	read rep
	p1 < $1 > $1.r1
	p1 < $2 > $2.r1
	if [ -f $rep/$3 ]
	then
		echo "$rep/$3 existe déjà. (r)emplacer, (c)oncaténer ou (a)nnuler ?"
		read opt
		if [ $opt="r" ]
		then
			cat $1.r1 $2.r1 | p2 > $3
			