SERVER

while (1) {
	recv(msg, from)
	if (id = get_id_or_add(from)) < 0
		send(FUL)
		continue
	process(msg, id)
	send(msg, from)
}

while (1) {
	recv(GET file)
	if (!file exists) {
		send(ERR)
		continue
	} else {
		send(FND data)
	}
	while (file) {
		recv(PLS n째)
		send(SMP n째 sample)
	}
	recv(ACK n+1)
	send(EOF)
}


